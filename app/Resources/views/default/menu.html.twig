{% trans_default_domain 'navigation' %}

{% block menu %}
        <div class="row header">
            <nav id="top-menu" class="col-xs-12">
                <ul>
                    <li><a href="{{ path('homepage') }}">{{ 'menu.main_page' | trans}}</a></li>
                    <li><a href="{{ path('new_article') }}">{{ 'menu.new_article' | trans }}</a></li>

                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout' | trans({}, 'FOSUserBundle') }} (<strong>{{ app.user.username }}</strong>)</a></li>
                    {% else %}
                        <li><a href="{{ path('register_user') }}">{{ 'layout.register' | trans({}, 'FOSUserBundle') }}</a></li>
                        <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login' | trans({}, 'FOSUserBundle')}}</a></li>
                    {% endif %}
                </ul>
            </nav>

            {% set enLocale = '' %}
            {% set ruLocale = '' %}
            {% if app.request.locale == 'ru' %}
                {% set ruLocale = 'active' %}
            {% else %}
                {% set enLocale = 'active' %}
            {% endif %}

            <div class="btn-group lang-switcher" role="group" aria-label="set-locale">
                <a type="button" href="{{ path('set_locale', {"_locale": "en"}) }}" class="btn btn-default {{ enLocale }}">EN</a>
                <a type="button" href="{{ path('set_locale', {"_locale": "ru"}) }}" class="btn btn-default {{ ruLocale }}">RU</a>
            </div>
        </div>
{% endblock %}