{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-7 col-sm-offset-3">
            <h1>{{ 'registration.caption' | trans }}</h1>

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row">
                <div class="col-sm-6">
                    <div>
                        {{ form_label(form.username, "registration.username") }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.email, "registration.email") }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.password, "registration.password") }}
                        {{ form_errors(form.password) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-sm-6">
                    <div>
                        {{ form_label(form.firstName, "registration.first_name") }}
                        {{ form_errors(form.firstName) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.lastName, "registration.last_name") }}
                        {{ form_errors(form.lastName) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-xs-12 pull-right">
                    {{ form_widget(form.register, {'attr': {'class': 'btn btn-success pull-right'}}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{%  endblock %}

