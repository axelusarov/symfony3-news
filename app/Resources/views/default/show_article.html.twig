{% extends 'base.html.twig' %}
{% block body %}
    <div id="main" class="row">
            <div class="col-xs-12">
                <div id="article-block">
                    <span id="article-title" class="h2">{{ article.title }}
                        {% if is_granted('ROLE_ADMIN') %}
                            <sup><a href="{{ path('delete_article', {'id': article.id}) }}">(Delete)</a></sup>
                        {% endif %}
                    </span>

                    <div id="article-info">Posted by <strong>{{ article.author }}</strong> on {{ article.date |date("d/m/Y h:m:i")}}</div>
                    <div id="article-content">
                    </div>
                    <p>{{ article.fullText }}</p>
                </div>
            </div>
    </div>
{% endblock %}